<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreyaDev.View.HomePage"
             Title="Home">

    <VerticalStackLayout Padding="20">
        <Image Source="logo_white.png"
               HorizontalOptions="Center"
               Style="{StaticResource LogoImage}"/>
        
        <Label Text="Welcome to Freyas Garden Developer App!"
               Style="{StaticResource LargeLabel}"
               HorizontalOptions="Center"/>
        
        <Label Text="This is your home page. Browse and explore."
               Style="{StaticResource MediumLabel}"
               HorizontalOptions="Center"/>

        <Button Text="Go to Listings" Style="{StaticResource BaseButton}" Clicked="OnListingsClicked"
            HorizontalOptions="Center" />
        <Button Text="Create New Listing" Style="{StaticResource BaseButton}" Clicked="OnNewListingClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
