<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreyaDev.View.StartingPages.RegisterPage"
             Title="Regisztráció">

    <VerticalStackLayout Padding="20">
        <Label Text="Felhasználónév:" />
        <Entry x:Name="txtUsername" Text="{Binding Username, Mode=TwoWay}" 
             />
        <Label Text="{Binding UsernameError}" 
            Style="{StaticResource WarningLabel}"
            IsVisible="{Binding IsUsernameErrorVisible}" />

        <Label Text="E-mail cím:" />
        <Entry x:Name="txtEmail" Text="{Binding UserEmail, Mode=TwoWay}" 
             />
        <!--//TODO: use "warning" style"-->
        <Label Text="{Binding EmailError}" 
            Style="{StaticResource WarningLabel}"
            IsVisible="{Binding IsEmailErrorVisible}" />

        <Label Text="Jelszó:" />
        <Entry x:Name="txtPassword" Text="{Binding UserPassword, Mode=TwoWay}" IsPassword="True"
             />

        <Label Text="Jelszó megerősítése:" />
        <Entry x:Name="txtPasswordConfirmation" Text="{Binding UserPasswordConfirmation, Mode=TwoWay}" IsPassword="True" 
                />
        <Label Text="{Binding PasswordError}" 
            Style="{StaticResource WarningLabel}"
            IsVisible="{Binding IsPasswordErrorVisible}" />

        <Button Text="Regisztráció" Command="{Binding RegisterCommand}" />

        <Label Text="Már van fiókod?" HorizontalOptions="Center" />
        <Button Text="Bejelentkezés"
                Clicked="OnLoginClicked"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>